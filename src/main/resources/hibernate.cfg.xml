<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:webapps/webatm/WEB-INF/classes/WebATM.db</property>
        <property name="hibernate.connection.username"></property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">dialect.SQLiteDialect</property>

        <property name="hibernate.connection.autocommit">true</property>
        <property name="hibernate.connection.release_mode">on_close</property>


        <property name="current_session_context_class">thread</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping resource="resources/mappings/user.hbm.xml" />
    </session-factory>
</hibernate-configuration>